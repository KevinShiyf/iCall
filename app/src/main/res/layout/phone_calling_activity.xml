<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:background="@drawable/main_top_bg"
        android:orientation="vertical">
        <TextView
            android:id="@+id/phone_calling_name_tv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textColor="@android:color/white"
            android:textSize="35sp"
            android:gravity="center_horizontal|bottom"
            android:text="龙傲天"/>
        <TextView
            android:id="@+id/phone_calling_duration_tv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textColor="@android:color/white"
            android:gravity="center_horizontal"
            android:paddingTop="12dp"
            android:textSize="18sp"
            android:text="呼叫中..."/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingBottom="3dp"
        android:layout_marginLeft="@dimen/phone_calling_space"
        android:layout_marginRight="@dimen/phone_calling_space">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/phone_calling_flag_iv"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/flag_cn" />
            <TextView
                android:id="@+id/phone_calling_country_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/phone_calling_font_color"
                android:layout_marginLeft="3dp"
                android:textSize="@dimen/phone_calling_fone"
                android:text="中国"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="3dp"
            android:orientation="horizontal">
            <!--<ImageView-->
                <!--android:layout_width="30dp"-->
                <!--android:layout_height="30dp"-->
                <!--android:src="@drawable/flag_cn"-->
                <!--android:visibility="invisible"/>-->
            <TextView
                android:id="@+id/phone_calling_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/phone_calling_font_color"
                android:layout_marginLeft="2dp"
                android:textSize="18sp"
                android:text="12:12"/>
            <TextView
                android:id="@+id/phone_calling_am_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:textColor="@color/phone_calling_font_color"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="1dp"
                android:textSize="12sp"
                android:text="AM"/>
        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/phone_calling_space"
        android:layout_marginRight="@dimen/phone_calling_space"
        android:background="#DFDFDF"></View>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="@dimen/phone_calling_space"
        android:layout_marginRight="@dimen/phone_calling_space">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/phone_calling_font_color"
            android:textSize="@dimen/phone_calling_fone"
            android:layout_marginLeft="3dp"
            android:text="@string/rate"/>
        <TextView
            android:id="@+id/phone_calling_rate_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textColor="@color/phone_calling_font_color"
            android:textSize="@dimen/phone_calling_fone"
            android:layout_marginLeft="3dp"
            android:text="100积分/分钟"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/phone_calling_space"
        android:layout_marginRight="@dimen/phone_calling_space"
        android:background="#DFDFDF"></View>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="@dimen/phone_calling_space"
        android:layout_marginRight="@dimen/phone_calling_space">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/phone_calling_font_color"
            android:textSize="@dimen/phone_calling_fone"
            android:layout_marginLeft="3dp"
            android:text="@string/my_credits"/>
        <TextView
            android:id="@+id/phone_calling_credits_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textColor="@color/phone_calling_font_color"
            android:textSize="@dimen/phone_calling_fone"
            android:layout_marginLeft="3dp"
            android:text="1111111"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/phone_calling_space"
        android:layout_marginRight="@dimen/phone_calling_space"
        android:background="#DFDFDF"></View>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="@dimen/phone_calling_space"
        android:layout_marginRight="@dimen/phone_calling_space">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/phone_calling_font_color"
            android:textSize="@dimen/phone_calling_fone"
            android:layout_marginLeft="3dp"
            android:text="@string/rest_duration"/>
        <TextView
            android:id="@+id/phone_calling_rest_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textColor="@color/phone_calling_font_color"
            android:textSize="@dimen/phone_calling_fone"
            android:layout_marginLeft="3dp"
            android:text="123分钟"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/phone_calling_space"
        android:layout_marginRight="@dimen/phone_calling_space"
        android:background="#DFDFDF"></View>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/phone_calling_space"
        android:layout_marginRight="@dimen/phone_calling_space"
        android:layout_marginTop="50dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/phone_calling_mute_iv"
                    android:layout_width="58dp"
                    android:layout_height="58dp"
                    android:src="@drawable/phone_mute_icon"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mute"
                    android:layout_marginTop="5dp"
                    android:textSize="@dimen/phone_calling_fone"
                    android:textColor="@color/phone_calling_font_color"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/phone_calling_key_iv"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:src="@drawable/phone_keyboard_icon"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/keyboard"
                android:layout_marginTop="5dp"
                android:textSize="@dimen/phone_calling_fone"
                android:textColor="@color/phone_calling_font_color"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/phone_calling_speaker_iv"
                    android:layout_width="58dp"
                    android:layout_height="58dp"
                    android:src="@drawable/phone_speaker_icon"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/speaker"
                    android:layout_marginTop="5dp"
                    android:textSize="@dimen/phone_calling_fone"
                    android:textColor="@color/phone_calling_font_color"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/phone_calling_end_iv"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_centerInParent="true"
            android:src="@drawable/phone_end_icon"/>
    </RelativeLayout>
</LinearLayout>
